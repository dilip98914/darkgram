<%- include("./partials/header") %>
    <div class="w-full min-h-screen bg-zinc-900 text-white py-5">
        <!-- header -->
         <div class="flex justify-between items-center pl-4">
            <a class="text-sm text-blue-500" href="/profile/<%=user.username%>">
                <i class="text-[1.4rem] ri-arrow-left-s-line"></i>
                <i class="text-[1.4rem] ri-user-fill"></i>
            </a>
            <h2 class="leading-none text-sm">Comments
                <i class="px-1 text-[1.4rem] ri-chat-2-line"></i>
            </h2>
            <h2></h2>

        </div>

        <!-- post -->
        <div class="post mt-10 w-full min-h-[50vh]">
            <div class="relative 
                rounded-md w-full h-96 mt-4 bg-sky-100 overflow-hidden">
                <img data-postid="<%=post.id%>" class="posting w-full h-full 
                object-cover
                " src="<%=post.picture%>">
            </div>
        
            <h2 class="text-white font-light text-sm mt-2">
                <span class="font-semibold pl-4 text-red-500 pr-2">
                    <%=post.user.username%>
                </span>
                <%=post.caption%>
            </h2>
        </div>
        <div class="w-full  px-5 min-h-[50vh]">
        <% post.comments.reverse().forEach(comment=>{ %>
            <div class="flex justify-between w-1/4">
                <div class="flex">
                    <div class="w-[9vw] h-[9vw] 
                        bg-sky-100 rounded-full overflow-hidden">
                        <img class="w-full h-full object-cover" src="<%=post.user.picture%>">
                    </div>
                    <div class="flex flex-col">
                        <h3 class="ml-3 text-blue-300">@<%=post.user.username%>
                        </h3>
                        <h3 class="px-4 py-1">
                            <%=comment.value%>
                        </h3>
                    </div>
                </div>
                <h4 class="text-gray-500"><%=formatRelativeTime(comment.date)%></h4>
            </div>
            
        <%})%>
        </div>

    </div>
    

<%- include("./partials/footer") %>