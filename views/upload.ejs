<%- include("./partials/header.ejs") %>
    <div class="w-full min-h-screen bg-zinc-900 text-white py-5">
        <div class="flex justify-between items-center px-4">
            <a class="tex-sm text-blue-500" href="/profile/<%=globalObj.username%>">
                <i class="ri-arrow-left-s-line"></i>
                profile
            </a>
            <h2 class="leading-none text-sm">Upload Post</h2>
        </div>

        <div class="flex flex-col items-center gap-2 mt-20">
            <div class="image w-[25vw] h-[25vw] rounded-full border-2 border-zinc-800 flex items-center justify-center">
                <i class="text-5xl font-light ri-image-line"></i>
            </div>
            <button id="selectpic" class="text-blue-500 captialize underline">
                select picture 
            </button>
        </div>

        <div class="flex w-full justify-center items-center mt-10 gap-3">
            <h5 class="post opacity-100 border-b-[1px] p-2 border-zinc-400">post</h5>
            <h5 class="post opacity-20 border-b-[1px] p-2 border-zinc-900">story</h5>
        </div>

        <form id="uploadForm" action="/post" class="w-full px-6 py-3 mt-10" enctype="multipart/form-data" method="post">
            <input class="postinput" hidden name="category" type="radio" value="post" checked="true">            
            <input class="postinput" hidden name="category" type="radio" value="post" >
            <input id="imageinp" hidden required  type="file" name="image">
            <textarea name="caption" required class="px-2 py-1 w-full bg-zinc-900 border-2 h-20 border-zinc-800
            resize-none rounded-md outline-none
            " placeholder="Write a Caption..."></textarea>
            <input class="w-full px-2 py-2 bg-blue-500 rounded-md" value="Post" type="submit">
        </form>


    </div>
<script>
    document.querySelector('#selectpic').addEventListener('click',()=>{
        document.querySelector('#uploadForm #imageinp').click()
    })
        

</script>


